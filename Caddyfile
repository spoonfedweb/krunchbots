{
    on_demand_tls {
        ask http://spoonfedshop.local/caddy-check
    }
    local_certs
}

:443 {
    tls internal {
        on_demand
    }
    reverse_proxy spoonfedshop.local {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-Port {server_port}

        health_timeout 5s
    }
}
